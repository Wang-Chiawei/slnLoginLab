@model prjLoginLab.Models.TEmployee

@{
    ViewData["Title"] = "員工新增";
}

<style>
    .form-group
    {
        margin-top:15px;
    }
</style>

<h1>員工註冊</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FId" class="control-label"></label>
                <input asp-for="FId" class="form-control" />
                <span asp-validation-for="FId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FPwd" class="control-label"></label>
                <input asp-for="FPwd" type="password" class="form-control" />
                <span asp-validation-for="FPwd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FCPwd" class="control-label"></label>
                <input asp-for="FCPwd" type="password" class="form-control" />
                <span asp-validation-for="FCPwd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FName" class="control-label"></label>
                <input asp-for="FName" class="form-control" />
                <span asp-validation-for="FName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FGender" class="control-label"></label>
                <br/>
                <span style="font-size:12pt">男</span>
                <input asp-for="FGender" type="radio" value="男" checked />
                <span style="font-size:12pt">女</span>
                <input asp-for="FGender" type="radio" value="女" />

                @*  <input asp-for="FGender" class="form-control" />
                <span asp-validation-for="FGender" class="text-danger"></span> *@
            </div>
            <div class="form-group">
                <label asp-for="FRole" class="control-label"></label>
                <select asp-for="FRole" class="form-control">
                    <option value="Member">檢視者</option>
                    <option value="Admin">管理員</option>
                    
                </select>
                <span asp-validation-for="FRole" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FMail" class="control-label"></label>
                <input asp-for="FMail" class="form-control" />
                <span asp-validation-for="FMail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FSalary" class="control-label"></label>
                <input asp-for="FSalary" class="form-control" />
                <span asp-validation-for="FSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FEployeeDate" class="control-label"></label>
                <input asp-for="FEployeeDate" class="form-control" />
                <span asp-validation-for="FEployeeDate" class="text-danger"></span>
            </div>
            
            
            <div class="form-group">
                <input type="submit" value="新增" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
